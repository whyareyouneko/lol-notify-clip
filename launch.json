{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Uvicorn (port 3000)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--port", "3000"],
      "cwd": "${workspaceFolder}/workspace/backend",
      "envFile": "${workspaceFolder}/workspace/backend/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend: Static (serve .)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/serve/build/main.js",
      "cwd": "${workspaceFolder}/workspace/frontend",
      "args": ["-l", "5173", "."],
      "runtimeArgs": ["npx"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Start Both",
      "configurations": ["Backend: Uvicorn (port 3000)", "Frontend: Static (serve .)"]
    }
  ]
}
